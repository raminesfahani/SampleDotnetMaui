<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Phonebook.Sample.Maui.ContactPage"
             Title="ContactPage"
             BackgroundColor="White">
    <StackLayout>
        <StackLayout Margin="20" VerticalOptions="StartAndExpand">

            <Label Text="Name" />

            <Entry Text="{Binding Name}" />

            <Label Text="PhoneNumber" />

            <Entry Text="{Binding PhoneNumber}" />

            <Label Text="Email" />

            <Entry Text="{Binding Email}" />

            <Label Text="Active" />

            <Switch IsToggled="{Binding Active}" />

            <Button Text="Save" Clicked="OnSaveClicked" Margin="2" />

            <Button Text="Delete" Clicked="OnDeleteClicked" Margin="2" />

            <Button Text="Cancel" Clicked="OnCancelClicked" Margin="2" />

        </StackLayout>
    </StackLayout>
</ContentPage>